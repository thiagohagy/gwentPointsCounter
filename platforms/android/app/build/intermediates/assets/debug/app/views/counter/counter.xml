<Page loaded="loaded">  

        <GridLayout rows="auto,auto,auto, auto" columns="*,*,*,*,*,*,*,*,*" horizontalAlignment="center" verticalAlignment="center">
                
            <Image row="0" col="0" class="factionImg" colSpan="4" src="{{ faction1 }}" />
            <Image row="0" col="5" class="factionImg" colSpan="4" src="{{ faction2 }}" />                

            <ListPicker row="1" col="0"  class="p-15 text-center font-weight-bold" id="langPickerP1m" items="{{ numeros }}" selectedIndex="{{player1Points[0]}}" />
            <ListPicker row="1" col="1"  class="p-15 text-center font-weight-bold" id="langPickerP1c" items="{{ numeros }}" selectedIndex="{{player1Points[1]}}" />
            <ListPicker row="1" col="2"  class="p-15 text-center font-weight-bold" id="langPickerP1d" items="{{ numeros }}" selectedIndex="{{player1Points[2]}}" />
            <ListPicker row="1" col="3"  class="p-15 text-center font-weight-bold" id="langPickerP1u" items="{{ numeros }}" selectedIndex="{{player1Points[3]}}" />

            <ListPicker row="1" col="5"  class="p-15 text-center font-weight-bold" id="langPickerP1m" items="{{ numeros }}" selectedIndex="{{player2Points[0]}}" />
            <ListPicker row="1" col="6"  class="p-15 text-center font-weight-bold" id="langPickerP1c" items="{{ numeros }}" selectedIndex="{{player2Points[1]}}" />
            <ListPicker row="1" col="7"  class="p-15 text-center font-weight-bold" id="langPickerP1d" items="{{ numeros }}" selectedIndex="{{player2Points[2]}}" />
            <ListPicker row="1" col="8"  class="p-15 text-center font-weight-bold" id="langPickerP1u" items="{{ numeros }}" selectedIndex="{{player2Points[3]}}" />

            <Label row="2" col="0" colSpan="9" text="" />            

            <Button row="3" col="0" colSpan="9" text="Reset points" tap="resetPoints" />            
            
        </GridLayout>

</Page>